include include/mixin_video

doctype html
html
	head
		title VARIOUS REASONS
		link(href='http://fonts.googleapis.com/css?family=Lato:300,300italic|Montserrat' rel='stylesheet',type='text/css')
		link(href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css", rel="stylesheet", type="text/css")
		link(href='css/vr.css',rel='stylesheet',type='text/css')
		meta(name="viewport",content="width=device-width")
		meta(charset="utf-8")
		meta(http-equiv="cache-control",content="max-age=0")
		meta(http-equiv="cache-control",content="no-cache")
		meta(http-equiv="expires",content="0")
		meta(http-equiv="expires",content="Tue, 01 Jan 1980 1:00:00 GMT")
		meta(http-equiv="pragma",content="no-cache")

	body
		.container
			.header
				h1 Various Reasons
				h3 
					span.vicon.icon-pyramid
					span.vicon.icon-cube
					span.vicon.icon-brain
			.section.future
				h2 This is the future you may have missed the first time
				.knob-icons
					.knob-icon
						img(src="../img/knob-1.png")
					.knob-icon
						img(src="../img/knob-2.png")
					.knob-icon
						img(src="../img/knob-3.png")
				p.band-desc VARIOUS REASONS updates the sound and image of early 80s wave, synth-punk, and EBM into a dark, high-energy show with projections and minimalist lights.
			.section.sounds
				h2 This is what it sounds like
				.soundcloud
					iframe(width="100%",height="120",scrolling="no",frameborder="no",src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/147936721&amp;color=ff5500&amp;auto_play=false&amp;hide_related=false&amp;show_artwork=false")
			.section.bandcamp
				include include/bandcamp
			.section.video
				h2 This is what it looks like
				+video("https://player.vimeo.com/video/88504271")
			.section.liveactions
				h2 This is about news and shows
				+video("https://www.youtube.com/embed/WU22ktZMGMY") 
				include include/shows
			
			.section.booking
				h2 How to book
				p VARIOUS REASONS is a veteran performer with more than 15 years of experience playing live electronic music. 
				ul.booklinks 
					li: a(href="mailto:music@variousreasons.com?subject=booking")
							i.fa.fa-envelope-square 
					li: a(href="http://facebook.com/variousreasons")
							i.fa.fa-facebook-square
					li: a(href="http://twitter.com/vrsrsns")
							i.fa.fa-twitter-square
				p.stage-req
					a(href="reqs.html") Stage Requirements
		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js")